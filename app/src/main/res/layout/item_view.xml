<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/alertTypeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView1"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:gravity="center_horizontal"
        android:layout_marginVertical="2dp"/>

    <TextView
        android:id="@+id/alertLocationTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView2"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_below="@id/alertTypeTV"
        android:gravity="center_horizontal"
        android:layout_marginVertical="1dp"/>
    <TextView
        android:id="@+id/alertDescTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView2"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_below="@id/alertLocationTV"
        android:gravity="center_horizontal"
        android:layout_marginVertical="1dp"/>

    <Button
        android:id="@+id/acceptBTN"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertDescTV"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#92B593"
        android:text="@string/accept" />

    <Button
        android:id="@+id/declineBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertDescTV"
        android:layout_toEndOf="@id/acceptBTN"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#E38181"
        android:text="@string/decline" />


</RelativeLayout>